<h1>Books</h1>
<table>
	
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

 <% @books.each do |book| %> 
  <tr>
   <td>本のタイトル</td>
   <td>本の本文</td>
   <td><%= link_to "show", book_path(book.id) %></td>
   <td><%= link_to "edit", book_path(book.id) %></td>
   <td><%= link_to "destroy", book_path(book.id) %></td>
  </tr>
 <% end %>
</table>


    	


<h1>New Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
 
  <div class="form-group"> 
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
 
  <div class="form-group">
    <h4>Body</h4>
    <%= f.text_area :body %>
  <div>

    <%= f.submit 'Create' %>
 
<% end %>